<div class="pinned-section">
{{#get "pages" limit="4" filter="featured:true" order="published_at desc" as |pinned_pages|}}
{{#if pinned_pages}}
	<div class="pinned-pages global-special{{#foreach pinned_pages}}{{#if @last}} items-{{@number}}{{/if}}{{/foreach}}">
		<h2><span>{{t "Announcements"}}</span></h2>
		{{#foreach pinned_pages}}
		{{>special_section hide_meta=true}}
		{{/foreach}}
	</div>
{{/if}}
{{/get}}
