{
    "name": "renge",
    "demo": "https://renge.fueko.net",
    "version": "2.1.0",
    "engines": {
        "ghost-api": "v4"
    },
    "author": {
        "name": "fueko",
        "email": "hello@fueko.net",
        "url": "https://fueko.net"
    },
    "keywords": [
        "ghost-theme"
    ],
    "config": {
        "posts_per_page": 5,
        "image_sizes": {
            "s": {
                "width": 260
            },
            "m": {
                "width": 500
            },
            "l": {
                "width": 800
            },
            "xl": {
                "width": 1100
            }
        },
        "custom": {
            "color_scheme": {
                "type": "select",
                "options": ["Light", "Dark", "Auto"],
                "default": "Light"
            },
            "search_api_key": {
                "type": "text"
            },
            "contact_form_endpoint": {
                "type": "text"
            },
            "footer_copyright": {
                "type": "text"
            },
            "disqus_shortname": {
                "type": "text",
                "group": "post"
            }
        }
    }
}